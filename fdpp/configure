SCRIPTPATH="$( cd "$(dirname "$0")" ; pwd -P )"

do_sub() {
    mkdir $1 2>/dev/null
    cd $1
    echo "srcdir = $SCRIPTPATH/$1" >config.mak
    ln -sf "$SCRIPTPATH/$1"/makefile makefile
    cd ..
}

TOPDIR=`realpath "$SCRIPTPATH/.."`
if [ ! -f configure ]; then
    ln -sf "$SCRIPTPATH"/makefile makefile
    echo "srcdir = $SCRIPTPATH" >config.mak

    do_sub thunk_gen
    do_sub kernel
fi
